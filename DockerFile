# Stage 1: Build
FROM node:20-alpine AS builder
WORKDIR /Skyight-B2C
COPY package*.json ./
ENV NODE_OPTIONS="--max-old-space-size=4096"
RUN npm i
COPY . .
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine
COPY --from=builder /Skyight-B2C/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
